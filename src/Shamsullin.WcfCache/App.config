<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <log4net>
        <root>
            <level value="DEBUG" />
            <appender-ref ref="VerboseAppender" />
            <appender-ref ref="ColoredConsoleAppender" />
        </root>
        <logger name="Memcached.ClientLibrary">
            <level value="ERROR" />
        </logger>
        <appender name="VerboseAppender" type="log4net.Appender.RollingFileAppender">
            <file value="${logdir}\WcfCache.log" />
            <appendToFile value="true" />
            <rollingStyle value="Date" />
            <datePattern value="yyyyMMdd.lo\g" />
            <maxSizeRollBackups value="10" />
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%-5level %date{HH':'mm':'ss'.'fff} [%thread] - %message%newline" />
            </layout>
        </appender>
        <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
            <mapping>
                <level value="FATAL" />
                <foreColor value="Red" />
                <backColor value="White" />
            </mapping>
            <mapping>
                <level value="ERROR" />
                <foreColor value="Red, HighIntensity" />
            </mapping>
            <mapping>
                <level value="WARN" />
                <foreColor value="Yellow" />
            </mapping>
            <mapping>
                <level value="INFO" />
                <foreColor value="White" />
            </mapping>
            <mapping>
                <level value="DEBUG" />
                <foreColor value="Green" />
            </mapping>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date{HH':'mm':'ss'.'fff} [%thread] - %message%newline" />
            </layout>
        </appender>
    </log4net>
    <system.serviceModel>
        <services>
            <service name="Shamsullin.WcfCache.WcfCacheService">
                <host>
                    <baseAddresses>
                        <add baseAddress="https://127.0.0.1/wcfcache"/>
                    </baseAddresses>
                </host>
                <endpoint binding="webHttpBinding" contract="Shamsullin.WcfCache.WcfCacheService"
                          bindingConfiguration="httpsWebBinding" behaviorConfiguration="WcfRestBehavior" />
            </service>
        </services>
        <bindings>
            <webHttpBinding>
                <binding name="httpsWebBinding" maxReceivedMessageSize="2147483647">
                    <security mode="Transport" />
                </binding>
            </webHttpBinding>
        </bindings>
        <behaviors>
            <endpointBehaviors>
                <behavior name="WcfRestBehavior">
                    <WcfRestBehaviorExtension />
                </behavior>
            </endpointBehaviors>
        </behaviors>
        <extensions>
            <behaviorExtensions>
                <add name="WcfRestBehaviorExtension" type="Shamsullin.Wcf.WcfRestBehaviorExtension, Shamsullin.WcfCache" />
            </behaviorExtensions>
        </extensions>
    </system.serviceModel>
    <runtime>
        <gcServer enabled="false" />
        <gcConcurrent enabled="true" />
    </runtime>
</configuration>